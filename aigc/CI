pipeline {
    agent any

    stages {

        stage('run aigc') {
            steps {
                sh '''
                cp -rf requirements.txt docker
                cd docker/
                docker build -t aigc/fastapi .
                   docker rm -f ${JOB_BASE_NAME} || true
                   docker run -d --name ${JOB_BASE_NAME} --network qdrant_net -p 7000:7000 -v ${JENKINS_HOME}/workspace/${JOB_NAME}:/usr/src/app  -w /usr/src/app -e TZ=Asia/Shanghai aigc/fastapi
                        '''

            }
        }

    }
}